{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-west-2",
        "source_ami": "ami-0e32ec5bc225539f5",
        "instance_type": "m4.large",
        "ssh_username": "ubuntu",
        "ami_name": "insight-spark-{{timestamp}}",
        "ami_groups": "all",
        "tags": {
              "Name": "insight-spark-packer"
        }
    }],
    "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "setup_env_and_download.sh"
      ],
      "pause_before": "30s"
    }
    ]
}
